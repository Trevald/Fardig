        "marked": "^1.2.0",
        "prosemirror-markdown": "^1.5.0",
        "prosemirror-utils": "^0.9.6",
        "tippy.js": "^6.2.7",
        "tiptap": "^1.30.0",
        "tiptap-extensions": "^1.33.1",
        "turndown": "^7.0.0",
